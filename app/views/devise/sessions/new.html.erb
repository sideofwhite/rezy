<div class="login-back">


<div class="header_logo large-abs"></div>

<div class="sign-modal">


<div class="sign-text text-center">
Sign in
</div>  

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="start-input-container">
    <%= f.input :email, input_html: { :class => "white-input"}, placeholder: 'Email', label: false %>
    </div>

    <div class="start-input-container">
    <%= f.input :password, input_html: { :class => "white-input"}, placeholder: 'Password', label: false %>
    </div>
   <div class="btn-input">
    <%= f.submit "Sign in", class: "btn blue", style: "margin-top: 30px;" %>
  </div>
<% end %>


<div class="row"></div>

<h5 class="text-center" style="margin-top: 30px;"><%= link_to "Forgot your password?", new_owner_password_path %> </h5>



</div>
</div>