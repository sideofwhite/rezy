


<div class="col-md-4 col-md-offset-4">
<div class="flow-box">

<div class="row">
<div class="col-sm-2 col-sm-offset-3">
<i class="material-icons flow-icons active">info</i>
</div>
<div class="col-sm-2">
<i class="material-icons flow-icons">account_circle</i>
</div>
<div class="col-sm-2">
<i class="material-icons flow-icons">home</i>
</div>
</div>


<div class="hero-title sub" style="margin-bottom: 10px; margin-top: 30px; text-align: center;">
Welcome to Rezy
</div>  
</div>
</div>


<div class="col-md-4 col-md-offset-4">














<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field">
  
  <div class="start-input-container full-name top-left">
    <div class="start-label">First Name</div>
   <%= f.input :firstName, input_html: { :class => "start-form"}, placeholder: 'First Name', label: false %>
  </div>
  <div class="start-input-container full-name">
    <div class="start-label">Last Name</div>
   <%= f.input :lastName, input_html: { :class => "start-form"}, placeholder: 'Last Name', label: false %>
  </div>
    <div class="start-input-container">
    <div class="start-label">Email</div>
   <%= f.input :email, input_html: { :class => "start-form"}, placeholder: 'Your email', label: false %>
  </div>

  <div class="start-input-container">
    <div class="start-label">Password</div>
  <%= f.input :password, input_html: { :class => "start-form"}, autocomplete: "off", placeholder: 'Password', label: false %>
  </div>

  </div>





  <div class="btn-input">
    <%= f.submit "Next", class: "btn square-btn" %>
  
  </div>
<% end %>

<div class="no-access">
New accounts are closed at this time. Please check back soon.
</div>

</div>



